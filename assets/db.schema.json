{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://github.com/unum-cloud/ukv/collection.schema.json",
    "type": "object",
    "properties": {
        "path": {
            "type": "string",
            "minLength": 1,
            "description": "Default data location. Optional for in-memory stores"
        },
        "config_path": {
            "type": "string",
            "minLength": 1,
            "description": "For RocksDB and LevelDB provides path to config file"
        },
        "ram_limit_kilobytes": {
            "type": "integer",
            "exclusiveMinimum": 0,
            "description": "Total amount of RAM available to running DBMS"
        },
        "ram_limit_per_transaction_kilobytes": {
            "type": "integer",
            "exclusiveMinimum": 0
        },
        "threads": {
            "type": "integer",
            "minimum": 0
        }
    },
    "required": [
        "ram_limit_per_transaction_kilobytes"
    ]
}